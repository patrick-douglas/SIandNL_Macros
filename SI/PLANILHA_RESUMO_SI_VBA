Sub CRIAR_PLANILHA_RESUMO_SI()
    Dim xFd As FileDialog
    Dim xFdItem As Variant
    Dim xFileName As String
    Set xFd = Application.FileDialog(msoFileDialogFolderPicker)
    If xFd.Show = -1 Then
        xFdItem = xFd.SelectedItems(1) & Application.PathSeparator
        xFileName = Dir(xFdItem & "*.xls*")
        Do While xFileName <> ""
            With Workbooks.Open(xFdItem & xFileName)
            
Application.ScreenUpdating = False

sFileName = Split(xFileName, "\")(UBound(Split(xFileName, "\")))
   
'Nome do .DAT
    Windows(sFileName).Activate
    Sheets("Summary").Select
    Range("A1").Select
    ActiveCell.Offset(1, 0).Range("A1").Select
    Selection.Copy
    Windows("PLANILHA_RESUMO_SI.xlsm").Activate
    ActiveCell.Offset(0, 0).Range("A1").Select
    ActiveCell.Offset(1, 0).Range("A1").Select
    Selection.PasteSpecial Paste:=xlPasteValues, Operation:=xlNone, SkipBlanks _
        :=False, Transpose:=False

'Numero de objetos
    Windows(sFileName).Activate
    Sheets("Summary").Select
    Range("A1").Select
    ActiveCell.Offset(1, 11).Range("A1").Select
    Selection.Copy
    Windows("PLANILHA_RESUMO_SI.xlsm").Activate
    ActiveCell.Offset(0, 0).Range("A1").Select
    ActiveCell.Offset(0, 1).Range("A1").Select
    Selection.PasteSpecial Paste:=xlPasteValues, Operation:=xlNone, SkipBlanks _
        :=False, Transpose:=False
'Espessura
    Windows(sFileName).Activate
    Sheets("Parameters").Select
    Range("A1").Select
    ActiveCell.Offset(22, 1).Range("A1").Select
    Selection.Copy
    Windows("PLANILHA_RESUMO_SI.xlsm").Activate
    ActiveCell.Offset(0, 0).Range("A1").Select
    ActiveCell.Offset(0, 1).Range("A1").Select
    Selection.PasteSpecial Paste:=xlPasteValues, Operation:=xlNone, SkipBlanks _
        :=False, Transpose:=False
'CE
    Windows(sFileName).Activate
    Sheets("Coefficient of Error").Select
    Range("A1").Select
    ActiveCell.Offset(1, 7).Range("A1").Select
    Selection.Copy
    Windows("PLANILHA_RESUMO_SI.xlsm").Activate
    ActiveCell.Offset(0, 0).Range("A1").Select
    ActiveCell.Offset(0, 1).Range("A1").Select
    Selection.PasteSpecial Paste:=xlPasteValues, Operation:=xlNone, SkipBlanks _
        :=False, Transpose:=False
        
'Volume
    Windows(sFileName).Activate
    Sheets("Planimetry").Select
    Range("A1").Select
    ActiveCell.Offset(3, 1).Range("A1").Select
    Selection.Copy
    Windows("PLANILHA_RESUMO_SI.xlsm").Activate
    ActiveCell.Offset(0, 0).Range("A1").Select
    ActiveCell.Offset(0, 1).Range("A1").Select
    Selection.PasteSpecial Paste:=xlPasteValues, Operation:=xlNone, SkipBlanks _
        :=False, Transpose:=False
        
'-------------------------------------------
Windows("PLANILHA_RESUMO_SI.xlsm").Activate
ActiveCell.Offset(0, -4).Range("A1").Select
ActiveSheet.Cells.Columns("B:B").NumberFormat = "#,##0.00"
ActiveSheet.Cells.Columns("A:A").AutoFit
Workbooks(sFileName).Close SaveChanges:=False
Application.ScreenUpdating = False

            End With
            xFileName = Dir
        Loop
    End If
End Sub